{
	"name": "patterns_playground",
	"version": "1.0.0",
	"description": "Playground for playing with software design patterns in Node.js",
	"main": "index.js",
	"scripts": {
		"test": "jest"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/jmiziolek/patterns_playground.git"
	},
	"author": "jmiziolek",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/jmiziolek/patterns_playground/issues"
	},
	"homepage": "https://github.com/jmiziolek/patterns_playground#readme",
	"dependencies": {
		"body-parser": "1.18.3",
		"cors": "2.8.5",
		"debug": "4.1.1",
		"express": "4.16.4",
		"helmet": "3.15.0",
		"kue": "0.11.6"
	},
	"eslintConfig": {
		"extends": [
			"airbnb-base"
		],
		"env": {
			"jest/globals": true
		},
		"parserOptions": {
			"ecmaVersion": 2018
		},
		"plugins": [
			"jest"
		],
		"rules": {
			"arrow-body-style": [
				"error",
				"as-needed",
				{
					"requireReturnForObjectLiteral": true
				}
			],
			"indent": [
				"error",
				2
			]
		}
	},
	"prettier": {
		"useTabs": false,
		"tabWidth": 2,
		"singleQuote": true,
		"trailingComma": "all"
	},
	"devDependencies": {
		"eslint": "5.12.0",
		"eslint-config-airbnb-base": "13.1.0",
		"eslint-plugin-import": "2.14.0",
		"jest": "23.6.0",
		"prettier": "1.15.3",
		"supertest": "3.4.1"
	}
}
